# -*- mode: python ; coding: utf-8 -*-
from PyInstaller.utils.hooks import collect_data_files, collect_submodules
from PyInstaller.building.datastruct import Tree
import os

datas = []
datas += collect_data_files('faster_whisper')
datas += collect_data_files('openwakeword')

# Add RealtimeSTT package files using Tree
realtimestt_path = os.path.join(os.path.abspath('.'), 'RealtimeSTT')
realtimestt_tree = Tree(realtimestt_path, prefix='RealtimeSTT', excludes=['__pycache__', '*.pyc'])

# Collect all RealtimeSTT submodules
realtimestt_hidden = collect_submodules('RealtimeSTT')

a = Analysis(
    ['electron_transcriber.py'],
    pathex=[os.path.abspath('.')],
    binaries=[],
    datas=datas,
    hiddenimports=[
        'numpy',
        'numpy.core',
        'numpy.core.multiarray',
        'scipy',
        'scipy.signal',
        'scipy.stats',
        'scipy.stats._distn_infrastructure',
        'scipy.stats._continuous_distns',
        'scipy.stats._discrete_distns',
        'scipy.special',
        'scipy.special._ufuncs',
        'scipy.special._ufuncs_cxx',
        'webrtcvad',
        'faster_whisper',
        'pyaudiowpatch',
        'pyaudio',
        'openwakeword',
        'openwakeword.model',
        'pvporcupine',
        'torch',
        'torch.multiprocessing',
        'soundfile',
        'halo',
        'collections',
        'sklearn',
        'sklearn.preprocessing',
    ] + realtimestt_hidden,
    hookspath=['hooks'],
    hooksconfig={},
    runtime_hooks=['hooks/runtime_hook.py'],
    excludes=['matplotlib', 'tkinter', 'pytest', 'pandas', 'tensorflow', 'cv2', 'PIL', 'torchvision', 'torchaudio'],
    noarchive=False,
    optimize=0,
)
pyz = PYZ(a.pure)

# Add RealtimeSTT tree to the executable
a.datas += realtimestt_tree

exe = EXE(
    pyz,
    a.scripts,
    a.binaries,
    a.datas,
    [],
    name='transcriber',
    debug=False,
    bootloader_ignore_signals=False,
    strip=False,
    upx=True,
    upx_exclude=[],
    runtime_tmpdir=None,
    console=True,
    disable_windowed_traceback=False,
    argv_emulation=False,
    target_arch=None,
    codesign_identity=None,
    entitlements_file=None,
)
